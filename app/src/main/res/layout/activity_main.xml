<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aula_7.relativelayout.MainActivity">
<TextView
    android:id="@+id/txt_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str1"
    android:background="@color/colorAccent"
    android:padding="10dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"/>
<!--Alinear a la isquierda superior-->
    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str2"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <!--Alinear al centro superior-->
    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str3"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <!--Alinear a la derecha superior-->
    <TextView
        android:id="@+id/txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str4"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/centerr"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizonta="true"/>
    <TextView
        android:id="@+id/txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str5"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/txt_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str6"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/txt_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str7"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str8"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>







</RelativeLayout>
